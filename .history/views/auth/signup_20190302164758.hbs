    <h2>Sign Up</h2>

  
<form id="form" action="/signup" method="POST">
    <label for="username">Username</label><br>
    <input type="text" name="username"
      placeholder="Your username">

    <label for="password">Password</label><br>
    <input type="text" name="password"
      placeholder="********">
    
