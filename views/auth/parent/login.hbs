<header>
  <nav class='cf'>
    <ul class='cf'>
      <li class="nav-item">
        <a class="nav-link logoTitle" href="/">{{title}}</a>
      </li>
    </ul>
  </nav>
</header>
{{!-- <h2 class="signup"><a class="nav-link href" href='/parent/signup'>Are you a Parent?</a> </h2> --}}

<div class="form-group">

  <form action="/parent/login" method="POST" id="form">
    <label for="username">Username</label>
    <input type="text" name="username">

    <label for="password">Password</label>
    <input type="password" name="password">

    {{#if errorMessage }}
    <div class="error-message">{{ errorMessage }}</div>
    {{/if}}

    <button type="submit">Sign in</button>

    <p class="account-message">
      Don't have an account? <a class="sign" href="/parent/signup">Sign up</a>
    </p>
  </form>
</div>

<footer class="footer">
  <p>Copyright &copy; {{title}} 2019</p>
</footer>