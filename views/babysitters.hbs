      <li class="hide-on-small">
        <a class="nav-link logoTitle" href="/">{{title}}</a>
      </li>
      <li class="nav-item babysitter">
        <a class="nav-link" href="/babysitter/{{baby._id}}">{{baby.firstName}} {{baby.lastName}}</a>
